<Window x:Class="pds_atv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pds_atv"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid Background="#342E1A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="153*"/>
                <ColumnDefinition Width="247*"/>
            </Grid.ColumnDefinitions>
            

            <Image Grid.Column="1" Source="/imagens/nanda.jpg" Margin="76,10,76,-10"/>

            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0">

           
            <Grid Grid.Column="0">
                
                <Grid.RowDefinitions>
                    
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0">
                        <Label Grid.Row="0" Content="31 de Março" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
                    </Border>

                </Grid>
            </Border>
           
        </Grid>
    </Border>
</Window>
